<UserControl x:Class="dotnet_music_player_app.Resources.Controls.SongItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Name="songItem">


    <Border Margin="0 0 0 0" CornerRadius="5" Padding="7">
        <Border.Style>
            <Style TargetType="Border">
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#1aab7a"/>
                    </Trigger>

                    <DataTrigger Binding="{Binding ElementName=songItem, Path=IsActive}" Value="True">
                        <Setter Property="Background" Value="#1aab7a"/>
                    </DataTrigger>

                </Style.Triggers>
            </Style>
        </Border.Style>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions>

            <TextBlock Text="{Binding ElementName=songItem, Path=Number}" Foreground="#c2e8dc" FontSize="13" FontWeight="SemiBold" Margin="5 0 30 0"/>
            <TextBlock Text="{Binding ElementName=songItem, Path=Title}" Grid.Column="1" Foreground="White" FontSize="13" FontWeight="SemiBold" Margin="0 0 0 0"/>
            <TextBlock Text="{Binding ElementName=songItem, Path=Time}" Grid.Column="2" Foreground="#c2e8dc" FontSize="13" FontWeight="SemiBold" Margin="0 0 5 0" HorizontalAlignment="Right"/>

        </Grid>
    </Border>
    
</UserControl>
